set number

filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab

set mouse=a

inoremap {<cr> {<cr>}<c-o>0<tab>

" disable arrow keys
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

" disable h,j,k,l navigation
noremap h <NOP>
noremap j <NOP>
noremap k <NOP>
noremap l <NOP>
